<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TelasPrincipais.MainActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="231dp"
        android:layout_height="213dp"
        android:contentDescription="Logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204"
        app:srcCompat="@drawable/logo1"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/login"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_editbox"
        android:drawableEnd="@drawable/ic_person"
        android:ems="10"
        android:fontFamily="@font/open_sans_light"
        android:hint="USUÁRIO"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.133"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btLogin"
        android:layout_width="180dp"
        android:layout_height="106dp"
        android:backgroundTint="#CCCCCC"
        android:contentDescription="Botao Login"
        android:onClick="login"
        android:scaleType="fitCenter"
        android:src="@drawable/btslogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Senha"
        app:layout_constraintVertical_bias="0.266"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/Senha"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_editbox"
        android:drawableEnd="@drawable/ic_lock"
        android:ems="10"
        android:fontFamily="@font/open_sans_light"
        android:hint="SENHA"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>